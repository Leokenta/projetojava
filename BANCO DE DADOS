
//CRIANDO UM BANCO DE DADOS

create database projetojava;
use projetojava;
CREATE TABLE usuario (id BIGINT(10) auto_increment primary key not null,
nome VARCHAR (255),
cpf VARCHAR (255),
email VARCHAR (255),
telefone VARCHAR(255));    

CREATE TABLE aluno (id BIGINT(10) auto_increment primary key not null,
nome VARCHAR (255),
idade VARCHAR (255),
sexo VARCHAR (255),
telefone VARCHAR(255));


CREATE TABLE professor (id BIGINT(10) auto_increment primary key not null,
nome VARCHAR (255),
idade VARCHAR (255),
sexo VARCHAR (255),
telefone VARCHAR(255));   

create table disciplina (id BIGINT(10) auto_increment primary key not null,
nome varchar (255),
modalidade varchar (255),
idioma varchar (255),
regime varchar (255));
